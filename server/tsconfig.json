{
  "compilerOptions": {
    "moduleResolution": "NodeNext",     
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions":true
  },
  "include": [
    "src/**/*.ts",
    "dotenv/config",
    "src/jest.config.ts"  
  ],
  "exclude": [
    "node_modules"
  ]
}